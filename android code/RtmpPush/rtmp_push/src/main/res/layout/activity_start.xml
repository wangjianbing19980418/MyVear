<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StartActivity"
    android:background="@drawable/back">

    <RelativeLayout
        android:id="@+id/ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务器IP:"
            android:textSize="20dp"
            android:id="@+id/ip_tv"/>

        <EditText
            android:background="#cccc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ip_et"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ip_tv"
            android:layout_marginStart="12dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ip"
        android:id="@+id/port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="端口号（默认为1935）"
            android:textSize="20dp"
            android:id="@+id/port_tv"/>

        <EditText
            android:background="#cccc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/port_et"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/port_tv"
            android:textSize="20dp"
            android:layout_marginStart="12dp"/>

    </RelativeLayout>





    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/port"
        android:id="@+id/room"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房间名"
            android:textSize="20dp"
            android:id="@+id/room_tv"/>

        <EditText
            android:background="#cccc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/room_et"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/room_tv"
            android:textSize="20dp"
            android:layout_marginStart="12dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/room"
        android:id="@+id/pindao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房间名"
            android:textSize="20dp"
            android:id="@+id/pindao_tv"/>

        <EditText
            android:background="#cccc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pindao_et"
            android:layout_alignParentTop="true"
            android:textSize="20dp"
            android:layout_toEndOf="@+id/pindao_tv"
            android:layout_marginStart="12dp"/>

    </RelativeLayout>





    <LinearLayout
        android:layout_marginTop="130dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>

    <TextView
        android:text="@string/tag_stream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/test_btn"
        android:background="@drawable/test_btn"
        android:layout_above="@+id/textView"
        android:layout_alignParentStart="true"/>

    <Button
        android:background="@drawable/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startRtmpButton"
        android:layout_above="@+id/test_btn"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>
